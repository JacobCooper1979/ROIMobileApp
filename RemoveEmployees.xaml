<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ROI_app.RemoveEmployees"
             NavigationPage.HasNavigationBar="False">
    <Grid>
        <Image
            Source="burnt_orange_texture_image.png"
            Aspect="AspectFill"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand" />

        <StackLayout>
            <!-- Home Button -->
            <Button
                x:Name="Home"
                Text="HOME"
                AutomationProperties.HelpText="Navigates back to the home button"
                BackgroundColor="Red"
                HeightRequest="110"
                WidthRequest="150"
                FontSize="30"
                Clicked="OnHomeButtonClicked"/>

            <!-- ROI Logo -->
            <Image
                Source="roi_logo.png"
                AutomationProperties.Name="ROI logo"
                HeightRequest="200"
                WidthRequest="200"
                Margin="10, 0, 20, 0"
                VerticalOptions="Start"
                HorizontalOptions="End"
                Grid.Row="0" />
        </StackLayout>
    </Grid>
</ContentPage>
